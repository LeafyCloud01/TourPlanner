<UserControl x:Class="PresentationLayer.Views.DeleteTour"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.Views"
             xmlns:local1="clr-namespace:PresentationLayer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local1:DeleteTourViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Button Height="40" Width="150" Command="{Binding DeleteTour}">Delete Selected Tour</Button>
    </Grid>
</UserControl>
