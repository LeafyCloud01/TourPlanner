<UserControl x:Class="PresentationLayer.Views.LogInfoDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.Views"
             xmlns:local1="clr-namespace:PresentationLayer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local1:LogInfoDisplayViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <DataGrid Name = "LogGrid" AlternatingRowBackground = "LightBlue" AlternationCount = "2" AutoGenerateColumns = "False" ItemsSource="{Binding LogInfo}">

            <DataGrid.Columns>
                <DataGridTextColumn Header = "Date" Binding = "{Binding Date}" />
                <DataGridTextColumn Header = "Time" Binding = "{Binding Time}" />
                <DataGridTextColumn Header = "Difficulty" Binding = "{Binding Difficulty}" />
                <DataGridTextColumn Header = "Total Distance" Binding = "{Binding TotalDistance}" />
                <DataGridTextColumn Header = "Total Time" Binding = "{Binding TotalTime}" />
                <DataGridTextColumn Header = "Rating" Binding = "{Binding Rating}" />
                <DataGridTextColumn Header = "Comment" Binding = "{Binding Comment}" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button  Command="{Binding DataContext.AddLog, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding ID}">+</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button  Command="{Binding DataContext.EditLog, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding ID}">...</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button  Command="{Binding DataContext.DeleteLog, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding ID}">-</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
