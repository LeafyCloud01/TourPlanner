<UserControl x:Class="PresentationLayer.Views.LogInfoDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Name = "LogGrid" AlternatingRowBackground = "LightBlue" AlternationCount = "2" AutoGenerateColumns = "False">

            <DataGrid.Columns>
                <DataGridTextColumn Header = "Date" Binding = "{Binding Date}" />
                <DataGridTextColumn Header = "Time" Binding = "{Binding Time}" />
                <DataGridTextColumn Header = "Difficulty" Binding = "{Binding Difficulty}" />
                <DataGridTextColumn Header = "Total Distance" Binding = "{Binding TotalDistance}" />
                <DataGridTextColumn Header = "Total Time" Binding = "{Binding TotalTime}" />
                <DataGridTextColumn Header = "Rating" Binding = "{Binding Rating}" />
                <DataGridTextColumn Header = "Comment" Binding = "{Binding Comment}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
