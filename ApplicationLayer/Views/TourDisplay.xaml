<UserControl x:Class="PresentationLayer.Views.TourDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.Views"
             xmlns:local1="clr-namespace:PresentationLayer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl x:Name="TourDisplayTabControl">
        <TabItem Header="Tour Info">
            <local:TourInfoDisplay></local:TourInfoDisplay>
        </TabItem>
        <TabItem Header="Route Info">
            <local:RouteInfoDisplay></local:RouteInfoDisplay>
        </TabItem>
        <TabItem Header="Tour Logs">
            <local:LogInfoDisplay></local:LogInfoDisplay>
        </TabItem>
        <TabItem Header="Add Tour" Visibility="Collapsed">
            <local:TourInputs></local:TourInputs>
        </TabItem>
        <TabItem Header="Edit Tour">
            <local:TourInputs></local:TourInputs>
        </TabItem>
        <TabItem Header="Delete Tour">
            <local:DeleteTour></local:DeleteTour>
        </TabItem>
        <TabItem Header="Add Log" Visibility="Collapsed">
            <local:LogInputs></local:LogInputs>
        </TabItem>
        <TabItem Header="Edit Log" Visibility="Collapsed">
            <local:LogInputs></local:LogInputs>
        </TabItem>
    </TabControl>
</UserControl>
