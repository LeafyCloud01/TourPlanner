<UserControl x:Class="PresentationLayer.Views.TourDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl>
        <TabItem Header="Tour Info">
            <local:TourInfoDisplay x:Name="DisplayTourInfo"></local:TourInfoDisplay>
        </TabItem>
        <TabItem Header="Route Info">
            <local:RouteInfoDisplay x:Name="DisplayRouteInfo"></local:RouteInfoDisplay>
        </TabItem>
        <TabItem Header="Tour Logs">
            <local:LogInfoDisplay x:Name="DisplayTourLogs"></local:LogInfoDisplay>
        </TabItem>
        <TabItem Header="Add Tour">
            <local:TourInputs x:Name="TourInput"></local:TourInputs>
        </TabItem>
        <TabItem Header="Add Log">
            <local:LogInputs x:Name="LogInput"></local:LogInputs>
        </TabItem>
    </TabControl>
</UserControl>
