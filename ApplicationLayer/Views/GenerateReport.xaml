<UserControl x:Class="PresentationLayer.Views.GenerateReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.Views"
             xmlns:local1="clr-namespace:PresentationLayer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local1:GenerateReportViewModel/>
    </UserControl.DataContext>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Height="40" Width="150" Command="{Binding GenerateReport}" CommandParameter="tour_report" Margin="5 10 5 5">Generate Tour Report</Button>
            <Button Height="40" Width="150" Command="{Binding GenerateReport}" CommandParameter="summarize_report" Margin="5 10 5 5">Generate Summery Report</Button>
        </StackPanel>
    </Grid>
</UserControl>
