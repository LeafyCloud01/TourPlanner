<UserControl x:Class="PresentationLayer.Views.ImportTour"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.Views"
             xmlns:local1="clr-namespace:PresentationLayer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local1:ImportTourViewModel/>
    </UserControl.DataContext>

    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="5 25 5 5">
            <TextBlock Margin="5 5 5 5" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold">Import Tour</TextBlock>
            <Button Height="40" Width="150" Command="{Binding ImportTour}" CommandParameter="JSON" Margin="5 10 5 5">From JSON</Button>
        </StackPanel>
    </Grid>
</UserControl>
