<UserControl x:Class="PresentationLayer.Views.TourInputs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>

            <Label>Tour Name</Label>
            <TextBox x:Name="TourNameInput"></TextBox>
            <Label>Description</Label>
            <TextBox x:Name="TourDescriptionInput"></TextBox>
            <Label>From</Label>
            <TextBox x:Name="TourFromInput"></TextBox>
            <Label>To</Label>
            <TextBox x:Name="TourToInput"></TextBox>
            <Label>Transport Type</Label>
            <TextBox x:Name="TourTransportTypeInput"></TextBox>
            <Label>Distance</Label>
            <Label>Estimated Time</Label>
            <Label>Route Information</Label>
            

            <Button x:Name="SubmitTour">Add Tour</Button>

        </StackPanel>
    </ScrollViewer>
</UserControl>
