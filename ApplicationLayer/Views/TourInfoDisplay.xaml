<UserControl x:Class="PresentationLayer.Views.TourInfoDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.Views"
             xmlns:local1="clr-namespace:PresentationLayer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local1:TourInfoDisplayViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="150" MaxWidth="100"></ColumnDefinition>
            <ColumnDefinition Width="*" MinWidth="150" MaxWidth="200"></ColumnDefinition>
            <ColumnDefinition Width="*" MinWidth="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Left">
            <TextBlock></TextBlock>
            <TextBlock Margin="5" FontWeight="Bold">Name:</TextBlock>
            <TextBlock Margin="5" FontWeight="Bold">From:</TextBlock>
            <TextBlock Margin="5" FontWeight="Bold">To:</TextBlock>
            <TextBlock Margin="5" FontWeight="Bold">Transport Type:</TextBlock>
            <TextBlock Margin="5" FontWeight="Bold">Tour Distance:</TextBlock>
            <TextBlock Margin="5" FontWeight="Bold">Estimated Time:</TextBlock>
            <TextBlock Margin="5" FontWeight="Bold">Popularity:</TextBlock>
            <TextBlock Margin="5" FontWeight="Bold">Child Friendliness:</TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left">
            <TextBlock></TextBlock>
            <TextBlock Margin="5" Text="{Binding TourInfo.Name}"></TextBlock>
            <TextBlock Margin="5" Text="{Binding TourInfo.From}"></TextBlock>
            <TextBlock Margin="5" Text="{Binding TourInfo.To}"></TextBlock>
            <TextBlock Margin="5" Text="{Binding TourInfo.TransportType}"></TextBlock>
            <TextBlock Margin="5" Text="{Binding TourInfo.TourDistance}"></TextBlock>
            <TextBlock Margin="5" Text="{Binding TourInfo.EstimatedTime}"></TextBlock>
            <TextBlock Margin="5" Text="{Binding TourInfo.Popularity}"></TextBlock>
            <TextBlock Margin="5" Text="{Binding TourInfo.ChildFriendliness}"></TextBlock>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <TextBlock TextAlignment="Center" FontSize="16" FontWeight="Bold">Description</TextBlock>
            <TextBlock Text="{Binding TourInfo.Description}"></TextBlock>
        </StackPanel>

    </Grid>
</UserControl>
