<UserControl x:Class="PresentationLayer.Views.AMDControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.Views"
             xmlns:local1="clr-namespace:PresentationLayer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150">
    <UserControl.DataContext>
        <local1:AMDControlsViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Margin="5,5,5,5" Command="{Binding AddElement}" MinWidth="10" MinHeight="10">+</Button>
        <Button Grid.Row="0" Grid.Column="1" Margin="5,5,5,5" Command="{Binding DeleteElement}" MinWidth="10" MinHeight="10">-</Button>
        <Button Grid.Row="0" Grid.Column="2" Margin="5,5,5,5" Command="{Binding ModifyElement}" MinWidth="10" MinHeight="10">...</Button>
    </Grid>
</UserControl>
